<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:popupTheme="@style/Theme.AppCompat.Light"
    android:background="@color/colorAmarillo"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    android:minHeight="?attr/actionBarSize"
    android:id="@+id/toolbar"
    android:padding="@dimen/padding_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:src="@drawable/ic_homero_simpson"
        android:layout_gravity="center"
        android:layout_width="@dimen/icono_width_toolbar"
        android:layout_height="@dimen/icono_height_toolbar">
    </ImageView>
</androidx.appcompat.widget.Toolbar>